/*
 * BigWorldSetup NextGen - Main Stylesheet
 *
 * Global styles for the application using Fusion theme.
 * Color palette follows the dark theme with golden accents.
 */

 * {
  padding: 0px;
  margin: 0px;
  border: 0px;
  border-style: none;
  border-image: none;
  outline: 0;
}

QWidget {
    background-color: #1e1e1e;
}

/* ============================================================================
 * INPUT FIELDS
 * ============================================================================ */

QLineEdit {
    background-color: #1e1e1e;
    background-image: url("resources/background.jpg");
    color: #ffffff;
    padding: 5px 10px;
    border: 1px solid #96846e;
    border-radius: 6px;
    selection-background-color: #655949;
}

QLineEdit:focus {
    border: 1px solid Goldenrod;
}

QLineEdit:disabled {
    background-color: #2a2a2a;
    color: #666666;
    border: 1px solid #404040;
}

/* ============================================================================
 * TOOLTIPS
 * ============================================================================ */

QToolTip {
    color: #f0f0f0;
    background-color: #2a2a2a;
    border: 1px solid #96846e;
    border-radius: 6px;
    padding: 6px;
    font-size: 10pt;
}

/* ============================================================================
 * BUTTONS
 * ============================================================================ */

QPushButton {
    background-color: #2a2a2a;
    color: #ffffff;
    border: 1px solid #96846e;
    border-radius: 6px;
    padding: 2px 16px;
    min-height: 24px;
}

QPushButton:hover {
    background-color: #333333;
    border-color: Goldenrod;
}

QPushButton:pressed {
    background-color: #1e1e1e;
}

QPushButton:disabled {
    background-color: #1e1e1e;
    color: #666666;
    border-color: #404040;
}

/* Primary action buttons */
QPushButton[primary="true"] {
    background-color: #655949;
    border-color: #96846e;
}

QPushButton[primary="true"]:hover {
    background-color: #76695a;
    border-color: Goldenrod;
}

/* ============================================================================
 * FRAMES & PANELS
 * ============================================================================ */

QFrame {
    border: none;
}

QFrame#header,
QFrame#footer {
    background-color: #2a2a2a;
}

QFrame#gameButtonFrame {
    background-color: #2a2a2a;
    border: 1px solid #2a2a2a;
    border-radius: 8px;
}

QFrame#gameButtonFrame:hover {
    background-color: #333333;
    border: 1px solid #404040;
    border-color: #96846e;
}

QFrame#gameButtonFrame[selected="true"] {
    background-color: #655949;
    border: 1px solid #655949;
    border-radius: 8px;
}

/* ============================================================================
 * SCROLL AREAS
 * ============================================================================ */

QScrollArea {
    border: none;
    background-color: transparent;
}

QScrollBar:vertical {
    background-color: #1e1e1e;
    width: 12px;
    border-radius: 6px;
}

QScrollBar::handle:vertical {
    background-color: #404040;
    min-height: 30px;
    border-radius: 6px;
}

QScrollBar::handle:vertical:hover {
    background-color: #655949;
}

QScrollBar::add-line:vertical,
QScrollBar::sub-line:vertical {
    height: 0px;
}

QScrollBar:horizontal {
    background-color: #1e1e1e;
    height: 12px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal {
    background-color: #404040;
    min-width: 30px;
    border-radius: 6px;
}

QScrollBar::handle:horizontal:hover {
    background-color: #655949;
}

QScrollBar::add-line:horizontal,
QScrollBar::sub-line:horizontal {
    width: 0px;
}

/* ============================================================================
 * COMBO BOXES
 * ============================================================================ */

QComboBox {
    background-color: #2a2a2a;
    color: #ffffff;
    border: 1px solid #96846e;
    border-radius: 6px;
    padding: 5px 10px;
    min-height: 24px;
}

QComboBox:hover {
    border-color: Goldenrod;
}

QComboBox::drop-down {
    border: none;
    width: 20px;
}

QComboBox::down-arrow {
    image: none;
    border-left: 5px solid transparent;
    border-right: 5px solid transparent;
    border-top: 5px solid #ffffff;
    margin-right: 5px;
}

QComboBox QAbstractItemView {
    background-color: #2a2a2a;
    color: #ffffff;
    border: 1px solid #96846e;
    selection-background-color: #655949;
    selection-color: #ffffff;
}

/* ============================================================================
 * TREE VIEWS
 * ============================================================================ */

QTreeView,
QTableView,
QListView {
    color: #ffffff;
    background-color: #1e1e1e;
    alternate-background-color: #1e1e1e;
    selection-background-color: #1e1e1e;
    selection-color: #ffffff;
    padding: 0px;
}

QTreeView::item,
QTableView::item,
QListView::item {
    padding: 6px 10px;
    margin: 0px 0;
}

QTreeView::item:hover,
QTableView::item:hover,
QListView::item:hover {
    background-color: #2a2a2a;
}

QTreeView::item:selected,
QTableView::item:selected,
QListView::item:selected {
    background-color: #655949;
}

QTreeView::item:hover:selected {
    background-color: #655949;
}

QTreeView::indicator {
    width: 16px;
    height: 16px;
    border-radius: 4px;
    border: 1px solid #666666;
    background-color: #222222;
}

QTreeView::indicator:checked {
    background-color: rgba(76, 175, 80, 0.3);
    border-color: #3e8e41;
}

QTreeView::indicator:indeterminate {
    background-color: rgba(255, 153, 0, 0.3);
    border-color: #cc8800;
}

/* ============================================================================
 * HEADER VIEWS
 * ============================================================================ */

QHeaderView::section {
    background-color: #2a2a2a;
    border-radius: 0;
    color: white;
    padding: 6px;
}

QHeaderView::section:first {
    border-top-left-radius: 8px;
}

QHeaderView::section:last {
    border-top-right-radius: 8px;
}

/* ============================================================================
 * TAB VIEWS
 * ============================================================================ */

QTabWidget {
  padding: 2px;
  selection-background-color: #455364;
}

QTabWidget QWidget {
  border-radius: 4px;
}

QTabWidget::pane {
  border: 0px solid #455364;
  border-radius: 4px;
  margin: 0px;
}

QTabWidget::pane:selected {
  background-color: #455364;
  border: 0px solid #346792;
}

QTabBar, QDockWidget QTabBar {
  qproperty-drawBase: 0;
  border-radius: 4px;
  margin: 0px;
  padding: 2px;
  border: 0;
}

QTabBar::tab:top:selected {
  color: #ffffff;
  background-color: #655949;
  border-bottom: 3px solid #655949;
}

QTabBar::tab:top, QDockWidget QTabBar::tab:top {
  background-color: transparent;
  margin-left: 2px;
  padding: 5px 10px;
  min-width: 5px;
  border-bottom: 3px solid #655949;
  border-top-left-radius: 4px;
  border-top-right-radius: 4px;
  color: #cccccc
}

/* ============================================================================
 * LABELS
 * ============================================================================ */

QLabel {
    color: #ffffff;
    background-color: transparent;
}

QLabel[heading="true"] {
    font-size: 14pt;
    font-weight: bold;
}

QLabel[subheading="true"] {
    font-size: 12pt;
    color: #cccccc;
}

QLabel#page-title {
    font-size: 20pt;
    font-weight: bold;
}

QLabel#page-step {
    color: #888888;
    font-size: 12pt;
}

QLabel#section-title {
    color: Goldenrod;
    font-size: 14pt;
    font-weight: bold;
}

/* ============================================================================
 * PROGRESS BARS
 * ============================================================================ */

QProgressBar {
    background-color: #1e1e1e;
    border: 1px solid #404040;
    border-radius: 6px;
    text-align: center;
    color: #ffffff;
    height: 20px;
}

QProgressBar::chunk {
    background-color: #655949;
    border-radius: 5px;
}

/* ============================================================================
 * MENUS
 * ============================================================================ */

QMenu {
    background-color: #2a2a2a;
    border: 1px solid #96846e;
    color: #ffffff;
    padding: 5px;
}

QMenu::icon {
  padding-left: 10px;
  width: 14px;
  height: 14px;
}

QMenu::item {
    border-radius: 4px;
    padding: 6px 20px;
}

QMenu::item:selected {
    background-color: #333333;
}

QMenu::separator {
    height: 1px;
    background-color: #404040;
    margin: 5px 10px;
}

/* ============================================================================
 * TOOL BUTTONS
 * ============================================================================ */

QToolButton {
    background-color: transparent;
    border: none;
    border-radius: 4px;
    padding: 5px;
}

QToolButton:hover {
    background-color: #333333;
}

QToolButton:pressed {
    background-color: #1e1e1e;
}

QToolButton::menu-indicator {
    image: none;
}

/* ============================================================================
 * CHECKBOXES & RADIO BUTTONS
 * ============================================================================ */

QCheckBox, QRadioButton {
    color: #ffffff;
    spacing: 8px;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid #666666;
    border-radius: 3px;
    background-color: #222222;
}

QCheckBox::indicator:checked, QRadioButton::indicator:checked {
    background-color: #655949;
    border-color: #96846e;
}

QCheckBox::indicator:hover, QRadioButton::indicator:hover {
    border-color: Goldenrod;
}

QRadioButton::indicator {
    border-radius: 8px;
}

/* ============================================================================
 * SPLITTERS
 * ============================================================================ */

QSplitter::handle {
    background-color: #2a2a2a;
}

QSplitter::handle:horizontal {
    width: 2px;
}

QSplitter::handle:vertical {
    height: 2px;
}

/* ============================================================================
 * CategoryButton
 * ============================================================================ */

QFrame#category-button {
    background-color: transparent;
    border: 1px solid transparent;
    border-radius: 8px;
}

QFrame#category-button:hover {
    background-color: #2a2a2a;
}

QFrame#category-button[selected="true"] {
    background-color: #655949;
    border: 1px solid #655949;
    border-radius: 8px;
}

QFrame#category-button[selected="true"] QLabel#count-badge {
    background-color: rgba(42, 42, 42, 0.4);
}

QLabel#count-badge[empty="true"] {
    background-color: rgba(255, 255, 255, 0.1);
    color: rgba(255, 255, 255, 0.5);
}

QFrame#category-button QLabel#count-badge {
    background-color: #2a2a2a;
    color: rgba(255, 255, 255, 0.6);
    border-radius: 9px;
    padding: 0px 10px;
}

QFrame#category-button[empty="true"] QLabel {
    color: rgba(255, 255, 255, 0.5);
}

QFrame#category-button[empty="true"] QLabel#count-badge {
    background-color: transparent;
    color: rgba(255, 255, 255, 0.5);
}

QScrollArea#mod-detail-panel QLabel#mod-detail-section {
    font-weight: bold;
    font-size: 11pt;
    color: #ffffff;
}

QScrollArea#mod-detail-panel QLabel {
    color: #cccccc;
}

/* ============================================================================
 * Badge
 * ============================================================================ */

QLabel#badge {
    color: #ffffff;
    background-color: #2a2a2a;
    border-radius: 9px;
    padding: 0px 10px;
}
