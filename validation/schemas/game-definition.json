{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://selphira.github.io/BigWorldSetup-NG/validation/schemas/game-definition.json",
  "title": "BigWorldSetup Enhanced Game Definition",
  "description": "Schema for validating BigWorldSetup Enhanced game description files",
  "type": "object",
  "required": ["id", "name", "sequences"],
  "additionalProperties": false,
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "name": {
      "type": "string",
      "minLength": 1
    },
    "forced_components": {
      "type": "object",
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[0-9]+$"
          },
          "uniqueItems": true
        }
      },
      "additionalProperties": false
    },
    "sequences": {
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/definitions/gameSequence"}
    }
  },
  "definitions": {
    "installStepType": {
      "type": "string",
      "enum": ["dwn", "ann", "ins"]
    },
    "installStep": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {"$ref": "#/definitions/installStepType"},
        "mod": {"type": "string"},
        "comp": {"type": "string"},
        "text": {"type": "string"}
      },
      "oneOf": [
        {
          "properties": {"type": {"const": "ann"}},
          "required": ["type", "text"]
        },
        {
          "properties": {"type": {"enum": ["ins", "dwn", null]}},
          "required": ["mod", "comp"]
        }
      ]
    },
    "fileGroupOperator": {
      "type": "string",
      "enum": ["all", "any"]
    },
    "fileGroup": {
      "type": "object",
      "required": ["files"],
      "additionalProperties": false,
      "properties": {
        "files": {
          "type": "array",
          "minItems": 1,
          "items": {"type": "string"}
        },
        "operator": {
          "$ref": "#/definitions/fileGroupOperator"
        },
        "description": {"type": "string"}
      }
    },
    "gameSequence": {
      "type": "object",
      "required": ["game"],
      "additionalProperties": false,
      "properties": {
        "game": {
          "type": "string",
          "minLength": 1
        },
        "required_files": {
          "type": "array",
          "items": {"$ref": "#/definitions/fileGroup"}
        },
        "lua_checks": {
          "type": "object",
          "additionalProperties": true
        },
        "allowed_mods": {
          "type": "array",
          "items": {"type": "string"},
          "uniqueItems": true
        },
        "blocked_mods": {
          "type": "array",
          "items": {"type": "string"},
          "uniqueItems": true
        },
        "allowed_components": {
          "type": "object",
          "patternProperties": {
            "^[a-zA-Z0-9_-]+$": {
              "type": "array",
              "items": {
                "type": "string",
                "pattern": "^[0-9]+$"
              },
              "uniqueItems": true
            }
          },
          "additionalProperties": false
        },
        "order": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^[a-z0-9_#'!-]+:[0-9]+$"
          }
        }
      }
    }
  }
}
