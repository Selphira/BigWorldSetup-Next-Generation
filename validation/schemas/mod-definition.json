{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://selphira.github.io/BigWorldSetup-Enhanced-Edition/validation/schemas/mod-definition.json",
  "title": "Big World Setup - Enhanced Edition: Mod Definition",
  "description": "Schema for validating BigWorldSetup Enhanced mod description files",
  "type": "object",
  "required": [
    "name", "version", "tp2", "games", "categories", "components", "translations", "links", "authors", "safe"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "description": "Mod name",
      "minLength": 1
    },
    "version": {
      "type": "string",
      "description": "Mod version",
      "pattern": "^[A-Za-z0-9._\\- ]{1,30}$"
    },
    "flags": {
      "type": "array",
      "description": "Mod flags",
      "items": {
        "$ref": "#/definitions/flagEnum"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "links": {
      "type": "object",
      "properties": {
        "homepage": {
          "type": "string",
          "format": "uri"
        },
        "forum": {
          "type": "string",
          "format": "uri"
        }
      },
      "additionalProperties": false
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["filename", "size"],
        "properties": {
          "filename": {
            "type": "string",
            "pattern": "^[^/\\\\:*?\"<>|]+\\.(zip|rar|7z|exe|tar\\.gz|tgz)$"
          },
          "size": {
            "type": "integer",
            "minimum": 0
          },
          "sha256": {
            "type": "string",
            "pattern": "^[a-fA-F0-9]{64}$",
            "description": "SHA256 hash of the download file"
          },
          "download": {
            "type": "string",
            "format": "uri"
          },
          "platforms": {
            "type": "array",
            "description": "List of supported platforms",
            "items": {
              "$ref": "#/definitions/platformEnum"
            },
            "minItems": 1,
            "uniqueItems": true
          }
        },
        "additionalProperties": false
      }
    },
    "games": {
      "type": "array",
      "description": "List of supported games",
      "items": {
        "$ref": "#/definitions/gameEnum"
      },
      "minItems": 1,
      "uniqueItems": true
    },
    "tp2": {
      "type": "string",
      "description": "TP2 filename",
      "pattern": "^[a-zA-Z0-9_\\-!#']*$"
    },
    "languages": {
      "type": "object",
      "description": "Map of language codes to WeiDU indices. Use 'all' for universal mods.",
      "patternProperties": {
        "^([a-z]{2}_[A-Z]{2}|all)$": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false,
      "minProperties": 1
    },
    "categories": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/categoryEnum"
      },
      "description": "Mod categories",
      "minItems": 1,
      "uniqueItems": true
    },
    "authors": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      },
      "description": "Mod authors",
      "minItems": 0,
      "uniqueItems": true
    },
    "safe": {
      "type": "integer",
      "enum": [0, 1, 2]
    },
    "components": {
      "type": "object",
      "description": "Mod components definitions",
      "minProperties": 1,
      "patternProperties": {
        "^[a-zA-Z0-9_-]+$": {
          "oneOf": [
            {
              "$ref": "#/definitions/standardComponent"
            },
            {
              "$ref": "#/definitions/mucComponent"
            },
            {
              "$ref": "#/definitions/subComponent"
            }
          ]
        }
      },
      "additionalProperties": false
    },
    "translations": {
      "type": "object",
      "description": "Translations per language",
      "minProperties": 1,
      "patternProperties": {
        "^[a-z]{2}_[A-Z]{2}$": {
          "$ref": "#/definitions/languageTranslations"
        }
      },
      "additionalProperties": false
    }
  },
  "definitions": {
    "categoryEnum": {
      "type": "string",
      "enum": [
        "patch", "util", "conv", "ui", "cosm", "portrait", "quest", "npc", "npc1d", "npcx", "smith", "spell",
        "item", "kit", "gameplay", "tactic", "party"
      ]
    },
    "gameEnum": {
      "type": "string",
      "enum": ["bg", "bg2", "tutu", "bgt", "bgee", "bg2ee", "sod", "eet", "pst", "pstee", "iwd", "iwd2", "iwdee"]
    },
    "platformEnum": {
      "type": "string",
      "enum": ["windows", "linux", "macos"]
    },
    "flagEnum": {
      "type": "string",
      "enum": ["required"]
    },
    "languages": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([a-z]{2}_[A-Z]{2}|all)$"
      }
    },
    "standardComponent": {
      "type": "object",
      "required": ["type"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["std", "dwn"]
        },
        "games": {
          "type": "array",
          "description": "Override supported games for this component",
          "items": {
            "$ref": "#/definitions/gameEnum"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "category": {
          "$ref": "#/definitions/categoryEnum",
          "description": "Override category for this component"
        },
        "flags": {
          "type": "array",
          "description": "Component flags",
          "items": {
            "$ref": "#/definitions/flagEnum"
          },
          "minItems": 0,
          "uniqueItems": true
        },
        "languages": {
          "$ref": "#/definitions/languages"
        }
      },
      "additionalProperties": false
    },
    "mucComponent": {
      "type": "object",
      "required": ["type", "components"],
      "properties": {
        "type": {
          "type": "string",
          "const": "muc"
        },
        "components": {
          "type": "array",
          "description": "List of mutually exclusive component IDs",
          "items": {
            "type": "string",
            "pattern": "^[0-9]+$"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "default": {
          "type": "string",
          "pattern": "^[0-9]+$"
        },
        "games": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/gameEnum"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "category": {
          "$ref": "#/definitions/categoryEnum",
          "description": "Override category for this component"
        },
        "flags": {
          "type": "array",
          "description": "Component flags",
          "items": {
            "$ref": "#/definitions/flagEnum"
          },
          "minItems": 0,
          "uniqueItems": true
        },
        "languages": {
          "$ref": "#/definitions/languages"
        }
      },
      "additionalProperties": false
    },
    "subComponent": {
      "type": "object",
      "required": ["type", "prompts"],
      "properties": {
        "type": {
          "type": "string",
          "const": "sub"
        },
        "prompts": {
          "type": "object",
          "description": "Prompts for user input",
          "minProperties": 1,
          "patternProperties": {
            "^[0-9]+$": {
              "type": "object",
              "required": ["options"],
              "properties": {
                "options": {
                  "type": "array",
                  "description": "Available options for this prompt",
                  "items": {
                    "type": "string",
                    "pattern": "^[0-9a-zA-Z]+$"
                  },
                  "minItems": 1,
                  "uniqueItems": true
                },
                "default": {
                  "type": "string",
                  "pattern": "^[0-9]+$"
                }
              },
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "games": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/gameEnum"
          },
          "minItems": 1,
          "uniqueItems": true
        },
        "category": {
          "$ref": "#/definitions/categoryEnum",
          "description": "Override category for this component"
        },
        "flags": {
          "type": "array",
          "description": "Component flags",
          "items": {
            "$ref": "#/definitions/flagEnum"
          },
          "minItems": 0,
          "uniqueItems": true
        },
        "languages": {
          "$ref": "#/definitions/languages"
        }
      },
      "additionalProperties": false
    },
    "languageTranslations": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "Mod description",
          "minLength": 1
        },
        "components": {
          "type": "object",
          "description": "Component name translations",
          "minProperties": 1,
          "patternProperties": {
            "^[a-zA-Z0-9_.-]+$": {
              "type": "string",
              "minLength": 1
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  }
}